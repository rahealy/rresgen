<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Resume of {{basics.name}}</title>
        <link rel="stylesheet" href="resume.css">
    </head>
    <body>
<!--basics-->
        {{#basics}}
        <div class="resume-basics-class">
            <h1>{{name}}</h1>
            <p>{{summary}}</p>
            <br>
            {{#location}}
            <div class="resume-basics-location-class">
                <p>{{address}}, {{city}}, {{region}}  {{postalCode}}</p>
            </div>
            {{/location}}
            <div class="resume-basics-contact-class">
                <p>Cell: {{phone}}</p>
                <p>Email: <a href="mailto:{{email}}">{{email}}</a>
            </div>
            <br>
        </div>
        {{/basics}}
        
<!--projects-->
        <div class="resume-projects-class">
            <h2>Projects</h2>
        {{#projects}}
            {{#.}}
            
            <p>
                {{#if endDate}}
                <b class="resume-projects-title-class">
                    <i>{{description}} ({{startDate}} - {{endDate}})</i>
                </b>
                {{else}}
                <b class="resume-projects-title-class">
                    <i>{{description}} ({{startDate}} - Current)</i>
                </b>
                {{/if}}
            </p>

            <p><a href="{{url}}">{{url}}</a></p>
            
            <div class="resume-projects-roles-class">
                <p>
                    <b>Roles:</b>
                {{#roles}}
                    {{.}} {{#if @last}} {{else}},{{/if}}
                {{/roles}}
                </p>
            </div>

            <div class="resume-projects-keywords-class">
                <p>
                    <b>Keywords:</b>
                {{#keywords}}
                    {{.}} {{#if @last}} {{else}},{{/if}}
                {{/keywords}}
                </p>
            </div>

            <div class="resume-projects-highlights-class">
                <p>
                    <b>Highlights:</b>
                    <ul class="resume-projects-highlights-list-class">
                        {{#highlights}}
                        <li>{{.}}</li>
                        {{/highlights}}
                    </ul>
                </p>
            </div>
            <br>
            {{/.}}
        {{/projects}}

<!--work-->
        <div class="resume-work-class">
            <h2>Work Experience</h2>
        {{#work}}
            {{#.}}
            <p>
                {{#if endDate}}
                <b class="resume-work-title-class">
                    <i>{{name}} - {{location}}; ({{startDate}} - {{endDate}})</i>
                </b>
                {{else}}
                <b class="resume-work-title-class">
                    <i>{{name}} - {{location}}; ({{startDate}} - Current)</i>
                </b>
                {{/if}}
            </p>

            <p>{{position}}</p>

            <div class="resume-work-highlights-class">
                <p>
                    <b>Highlights:</b>
                    <ul class="resume-work-highlights-list-class">
                        {{#highlights}}
                        <li>{{.}}</li>
                        {{/highlights}}
                    </ul>
                </p>
            </div>
            <br>
            {{/.}}
        {{/work}}
        </div>

<!--volunteer-->
        <div class="resume-volunteer-class">
            <h2>Volunteerism</h2>
        {{#volunteer}}
            {{#.}}
            <p>
                {{#if endDate}}
                <b class="resume-volunteer-title-class">
                    <i>{{organization}} - {{location}}; ({{startDate}} - {{endDate}})</i>
                </b>
                {{else}}
                <b class="resume-volunteer-title-class">
                    <i>{{organization}} - {{location}}; ({{startDate}} - Current)</i>
                </b>
                {{/if}}
            </p>

            <p>{{summary}}</p>

            <div class="resume-volunteer-highlights-class">
                <p>
                    <b>Highlights:</b>
                    <ul class="resume-volunteer-highlights-list-class">
                        {{#highlights}}
                        <li>{{.}}</li>
                        {{/highlights}}
                    </ul>
                </p>
            </div>
            <br>
            {{/.}}
        {{/volunteer}}
        </div>

<!--skills-->
        <div class="resume-skills-class">
            <h2>Skills</h2>
        {{#skills}}
            {{#.}}
            <p>
                <b><i>{{name}}, {{level}}</i></b>
            </p>
            <div class="resume-skills-keywords-class">
                <p>
                {{#keywords}}
                    {{.}} {{#if @last}} {{else}},{{/if}}
                {{/keywords}}
                </p>
            </div>
            <br>
            {{/.}}
        {{/skills}}
        </div>

<!--education-->
        <div class="resume-education-class">
            <h2>Education</h2>
        {{#education}}
            {{#.}}
            <p>
                <b class="resume-education-title-class"><i>{{#courses}}{{.}}{{/courses}}</i></b>
            </p>

            <p>
                {{#if endDate}}
                <b>
                    {{institution}} ({{startDate}} - {{endDate}})
                </b>
                {{else}}
                <b>
                    {{institution}} ({{startDate}} - Current)
                </b>
                {{/if}}
            </p>

            <p><a href="{{url}}">{{url}}</a></p>

            <div class="resume-education-highlights-class">
                <b>Highlights:</b>
                <ul class="resume-education-highlights-list-class">
                    {{#highlights}}
                    <li>{{.}}</li>
                    {{/highlights}}
                </ul>
            </div>
            <br>
            {{/.}}
        {{/education}}
        </div>
        <br>
    </body>
</html>
